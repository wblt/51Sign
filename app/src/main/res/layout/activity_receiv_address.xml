<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cn.tthud.a51sign.activity.ReceivAddressActivity">
    <include
        android:id="@+id/bolck_titlebar"
        layout="@layout/activity_top_text" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorPrimary"></LinearLayout>
        <ImageView
            android:id="@+id/iv_userimg"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-20dp"
            android:src="@mipmap/header" />
        <LinearLayout
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:layout_margin="30dp"
            android:orientation="vertical"
            >
            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0x94F9c5579Eb813065956E3832Ac4f6ff44439DF0"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="13sp"
                android:ellipsize="end"
                android:maxLines="2"
                />
            <EditText
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="0"/>

            <ImageView
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/contentIv"
                android:layout_width="240dp"
                android:layout_height="240dp"
                android:scaleType="centerInside"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="复制钱包地址"
                android:textColor="#ffffff"
                android:textSize="15sp"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
